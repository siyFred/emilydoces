---
import CartButton from "./CartButton";
---

<header
  style={{
    display: "grid",
    gridTemplateColumns: "1fr auto 1fr",
    alignItems: "center",
    padding: "0.2rem 2rem" /* Um pouco mais de espaço nas laterais */,
    backgroundColor: "#2d1e17",
    width: "100%",
    boxSizing: "border-box",
  }}
>
  <div></div>
  <div
    style={{
      display: "flex",
      justifySelf: "center",
    }}
  >
    <a href="/" style={{ display: "block" }}>
      <img
        src="logo.png"
        alt="Logo Emily Doces"
        class="header-logo logo-write"
        fetchpriority="high"
        loading="eager"
        style={{
          height: "85px",
          width: "auto",
          display: "block",
          marginTop: "5px",
          marginRight: "16px",
        }}
      />
    </a>
  </div>
  <div style={{ display: "flex", justifySelf: "end" }}>
    <CartButton client:load />
  </div>
</header>

<style>
  .logo-write {
    /* Gradiente com borda suave para imitar traço de caneta */
    -webkit-mask-image: linear-gradient(
      to right,
      black        40%,
      rgba(0,0,0,0.55) 47%,
      transparent  54%
    );
    -webkit-mask-size: 220% 100%;
    -webkit-mask-position: 100% 0;
    mask-image: linear-gradient(
      to right,
      black        40%,
      rgba(0,0,0,0.55) 47%,
      transparent  54%
    );
    mask-size: 220% 100%;
    mask-position: 100% 0;
    animation: write-logo 2s cubic-bezier(0.4, 0, 0.2, 1) 0s forwards;
  }

  @keyframes write-logo {
    from {
      -webkit-mask-position: 100% 0;
      mask-position: 100% 0;
    }
    to {
      -webkit-mask-position: 0% 0;
      mask-position: 0% 0;
    }
  }
</style>
