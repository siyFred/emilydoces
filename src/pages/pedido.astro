---
import Layout from "../layouts/Layout.astro";
import EggsAssembler from "../components/EggsAssembler";
---

<Layout title="Monte seu Ovo | Catálogo de Páscoa">
  <a href="/" class="back-link">← Voltar para o Início</a>
  <h2 class="page-title">Monte seu Ovo</h2>
  <EggsAssembler client:load />
</Layout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: #2d1e17;
    text-decoration: none;
    font-weight: bold;
    font-size: 0.9rem;
    opacity: 0.75;
    transition: opacity 0.2s, gap 0.2s;
    margin-bottom: 0.5rem;
  }
  .back-link:hover {
    opacity: 1;
    gap: 0.65rem;
  }

  .page-title {
    color: #2d1e17;
    text-align: center;
    margin-top: 0.25rem;
    margin-bottom: 1.5rem;
    font-size: clamp(1.3rem, 4vw, 1.75rem);
  }
</style>
