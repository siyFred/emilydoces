---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Monte seu ovo de PÃ¡scoa personalizado com a Emily Doces. Escolha recheios, cascas e acompanhamentos e finalize seu pedido pelo WhatsApp!" />
    <title>{title}</title>
  </head>
  <body
    style="margin: 0; padding: 0; box-sizing: border-box; font-family: system-ui, sans-serif; display: flex; flex-direction: column; min-height: 100dvh;"
  >
    <Header />
    <main class="site-main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }

  .site-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    box-sizing: border-box;
  }
</style>

<style is:global>
  body {
    background-color: #f8f4e6; /* A cor que vai ficar por baixo */
    background-image: url("/handmade-paper.png");
    background-repeat: repeat; /* Faz o quadradinho se repetir pela tela toda */
    background-blend-mode: multiply;
  }
</style>
